<% if logged_in? %>
    
    <h1><%= current_user.name %> のid: <%= @task.id %>のTask詳細ページ</h1>
    
        <table class="table table-bordered">
            
                <tr>
                    <th scope="row">id</th>
                    <td><%= @task.id %></td>
                </tr>
                <tr>
                    <th scope="row">status</th>
                    <td><%= @task.status %></td>
                </tr>
                <tr>
                    <th scope="row">task</th>
                    <td><%= @task.content %></td>
                </tr>
        </table>
    
    
    <%= link_to 'このTaskを編集する', edit_task_path(@task), class: 'btn btn-light' %>
    <%= link_to 'このTaskを削除する', @task, method: :delete, data: {confirm: '本当に削除してよろしいでしょうか？'}, class: 'btn btn-danger' %>
<% else %>
    <%= render 'sessions/new' %>
<% end %>