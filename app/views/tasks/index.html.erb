<% if logged_in? %>
    <h1><%= current_user.name %>のTask一覧ページ</h1>
    
 
    
    <% if @tasks.any? %>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>id</th>
                <th>status</th>
                <th>task</th>
            </tr>
        </thead>
        <tbody>
            <% @tasks.each do |task| %>
            <tr>
                <td><%= link_to task.id, task %></td>
                <td><%= task.status %></td>
                <td><%= task.content %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <% end %>
    
<div>
    <%= paginate @tasks %>
</div>
<%= link_to '新規Taskの登録', new_task_path, class: 'btn btn-primary' %>

<% else %>
    <div class="center jumbotron">
        <div class="text-center">
          <h1>Welcome to the Tasklist</h1>
          <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
        </div>
    </div>
<% end %>


