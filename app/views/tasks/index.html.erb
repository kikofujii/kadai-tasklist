<h1>Task一覧ページ</h1>

<% if @tasks.any? %>
<table class="table table-striped">
    <thead>
        <tr>
            <th>id</th>
            <th>status</th>
            <th>task</th>
        </tr>
    </thead>
    <tbady>
        <% @tasks.each do |task| %>
        <tr>
            <td><%= link_to task.id, task %></td>
            <td><%= task.status %></td>
            <td><%= task.content %></td>
        </tr>
        <% end %>
    </tbady>
</table>
<% end %>
<div>
    <%= paginate @tasks %>
</div>

<%= link_to '新規Taskの登録', new_task_path, class: 'btn btn-primary' %>
